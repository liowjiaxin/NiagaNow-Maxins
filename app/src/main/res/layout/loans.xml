<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Page Title -->
        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loans"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Loan Eligibility Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFF5F5"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_your_loan_eligibility"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:drawablePadding="8dp"
                    android:tint="#D32F2F"
                    />

                <EditText
                    android:id="@+id/loan_amount_input"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:inputType="numberDecimal"
                    android:hint="Loan Amount (e.g, 10000)"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/tenure_input"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Tenure in Years (e.g. 3)"
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/predict_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_eligibility_check"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#D32F2F"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp" />

                <TextView
                    android:id="@+id/result_text"
                    android:text="Result will show here"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="24dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Loan Option Cards Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <include
                layout="@layout/loan_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:tag="Equipment" />

            <include
                layout="@layout/loan_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="Expansion" />


            <!-- Business Expansion Loan -->
            <include layout="@layout/loan_card"
                android:tag="Expansion" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>